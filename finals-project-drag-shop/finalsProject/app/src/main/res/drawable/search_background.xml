<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <stroke android:width="2dp" android:color="#2196F3"/>
            <corners android:radius="8dp"/>
            <padding android:left="8dp" android:top="8dp"
                android:right="8dp" android:bottom="8dp"/>
        </shape>
    </item>

    <!-- Pressed state --> <!-- i have no idea what these are but ill leave it here -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE"/>
            <stroke android:width="2dp" android:color="#1976D2"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <stroke android:width="1dp" android:color="#BDBDBD"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

</selector>
