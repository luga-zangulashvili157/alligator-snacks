<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/confirmationScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout android:id="@+id/backgroundConfirmation"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:background="#f5f5f5"
            android:layout_weight="1">

            <LinearLayout android:id="@+id/ConfirmationBar"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_height="wrap_content">

                <ImageView android:id="@+id/ConfirmationBackarrowIcon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/arrow_left"
                    app:tint="#212B21"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView android:id="@+id/confirmationText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="U SURE U BUY ZIS?"
                    android:gravity="center"
                    android:fontFamily="@font/bahnschrift_regular"
                    android:textColor="#212B21"
                    android:textSize="30sp"
                    android:textFontWeight="650" />

                <ImageView android:id="@+id/invisible7"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/arrow_left"
                    app:tint="#f5f5f5" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="10dp"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:id="@+id/ItemMainPicture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder"/>
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/ItemMainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title placeholder"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#212B21"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buy_item_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:id="@+id/quantitySelector"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="8dp">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AMOUNT: "
                                android:textSize="30sp"
                                android:textColor="#FFFFFF"
                                android:gravity="center"
                                android:fontFamily="@font/bahnschrift_regular" />


                            <TextView
                                android:id="@+id/chosenQuantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textSize="30sp"
                                android:textColor="#FFFFFF"
                                android:gravity="center"
                                android:fontFamily="@font/bahnschrift_regular" />

                        </LinearLayout>



                        <TextView
                            android:id="@+id/GivenPrice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="$00000.00"
                            android:textSize="30sp"
                            android:textColor="#f5f5f5"
                            android:fontFamily="@font/bahnschrift_regular"
                            android:gravity="end|center_vertical"
                            android:padding="8dp"/>



                    </LinearLayout>




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="shipping address:"
                        android:textSize="16sp"
                        android:textColor="#828487"
                        android:padding="10dp"/>

                    <EditText
                        android:id="@+id/shippingInfoInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="i have no idea country > i have no idea city > i have no idea street > i have no idea building > i have no floor > i have no idea apartment number."
                        android:textSize="16sp"
                        android:textColor="#212B21"
                        android:padding="10dp"
                        android:background="@android:drawable/edit_text"
                        android:inputType="textMultiLine"
                        android:gravity="top|start"
                        android:scrollbars="vertical"
                        android:overScrollMode="always"
                        android:singleLine="false"
                        android:lines="2"
                        android:ellipsize="none"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="payment method (and ID):"
                        android:textSize="16sp"
                        android:textColor="#828487"
                        android:padding="10dp"/>

                    <EditText
                        android:id="@+id/paymentInfoInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="mastercard, viza shmiza.\nh#$@u23T6g@yeg^T6heehee"
                        android:textSize="16sp"
                        android:textColor="#212B21"
                        android:padding="10dp"
                        android:background="@android:drawable/edit_text"
                        android:inputType="textMultiLine"
                        android:gravity="top|start"
                        android:scrollbars="vertical"
                        android:overScrollMode="always"
                        android:singleLine="false"
                        android:lines="2"
                        android:ellipsize="none"/>




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="product client (and ID):"
                        android:textSize="16sp"
                        android:textColor="#828487"
                        android:padding="10dp"/>

                    <EditText
                        android:id="@+id/clientInfoInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="carlos darwin ploinker\n1234-5678-9009-8765-4321"
                        android:textSize="16sp"
                        android:textColor="#212B21"
                        android:padding="10dp"
                        android:background="@android:drawable/edit_text"
                        android:inputType="textMultiLine"
                        android:gravity="top|start"
                        android:scrollbars="vertical"
                        android:overScrollMode="always"
                        android:singleLine="false"
                        android:lines="2"
                        android:ellipsize="none"/>






                    <androidx.cardview.widget.CardView
                        android:id="@+id/buyButtonCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:layout_marginHorizontal="8dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="#e7a62c">

                        <TextView
                            android:id="@+id/buyButtonText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="yes dude buy it"
                            android:textSize="28sp"
                            android:textColor="#f5f5f5"
                            android:fontFamily="@font/bahnschrift_regular"
                            android:gravity="center"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="8dp" />
                    </androidx.cardview.widget.CardView>



                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <include layout="@layout/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    </LinearLayout>

</ScrollView>
