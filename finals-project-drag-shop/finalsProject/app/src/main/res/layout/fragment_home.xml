<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">


    <include
        layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/backgroundHome"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:background="#f5f5f5"
        android:layout_weight="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:clipChildren="true"
            android:clipToPadding="true">


            <ImageView
                android:id="@+id/funnycarImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:scaleX="1.7"
                android:scaleY="1.7"
                android:translationY="-90dp"
                android:translationX="10dp"
                android:adjustViewBounds="true" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#BF212B21"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:padding="15dp">

            <TextView
                android:id="@+id/selling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selling car parts since.... idk"
                android:fontFamily="@font/bahnschrift_regular"
                android:textFontWeight="650"
                android:gravity="start"
                android:textColor="#f5f5f5"
                android:layout_marginBottom="5dp"
                android:textSize="23sp"/>

            <TextView
                android:id="@+id/anyways"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=".... anyways just explore what we have lol"
                android:fontFamily="@font/bahnschrift_regular"
                android:textFontWeight="650"
                android:gravity="start"
                android:textColor="#f5f5f5"
                android:textSize="23sp"/>
            </LinearLayout>

        </FrameLayout>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/startShoppingCard"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="7dp"
            android:layout_height="120dp"
            app:cardCornerRadius="16dp"
            android:clipChildren="true"
            android:clipToPadding="true">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:clipChildren="true"
            android:clipToPadding="true">


            <ImageView
                android:id="@+id/gearBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                android:adjustViewBounds="true" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="18dp"
                android:background="#99122B21">

                <TextView
                    android:id="@+id/startShoppingText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="Start Shopping"
                    android:fontFamily="@font/bahnschrift_regular"
                    android:textColor="#f5f5f5"
                    android:textSize="23sp"
                    android:textFontWeight="650"/>

                <ImageView
                    android:id="@+id/arrowIconshopping"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/arrow_right"
                    app:tint="#f5f5f5" />

            </LinearLayout>
        </FrameLayout>
        </androidx.cardview.widget.CardView>




        <TextView
            android:id="@+id/galleryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GALLERY"
            android:fontFamily="@font/bahnschrift_regular"
            android:textColor="#212B21"
            android:textSize="40sp"
            android:textFontWeight="550"
            android:layout_marginTop="5dp"
            android:paddingStart="20dp"/>


        <TextView
            android:id="@+id/gallerySubtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We also have a bunch of pictures you can entertain with, have a look at our garage."
            android:fontFamily="@font/bahnschrift_regular"
            android:textColor="#212B21"
            android:textSize="18sp"
            android:textFontWeight="550"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>



        <androidx.cardview.widget.CardView
            android:id="@+id/letsGoCard"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="120dp"
            app:cardCornerRadius="16dp"
            android:clipChildren="true"
            android:clipToPadding="true"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:clipChildren="true"
                android:clipToPadding="true">


                <ImageView
                    android:id="@+id/galleryBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder"
                    android:adjustViewBounds="false"
                    android:scaleX="-1.2"
                    android:scaleY="1.2"
                    android:translationY="-10dp" />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="18dp"
                    android:background="#99122B21">

                    <TextView
                        android:id="@+id/letsgoText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:text="Lets go"
                        android:fontFamily="@font/bahnschrift_regular"
                        android:textColor="#f5f5f5"
                        android:textSize="23sp"
                        android:textFontWeight="650"/>

                    <ImageView
                        android:id="@+id/arrowIcongarage"
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/arrow_right"
                        app:tint="#f5f5f5" />

                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>




    </LinearLayout>


    <include
        layout="@layout/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
